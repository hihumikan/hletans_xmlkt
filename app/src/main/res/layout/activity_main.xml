<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="408dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/home_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="home_location" />

        <EditText
            android:id="@+id/home_location_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="current_location" />

        <EditText
            android:id="@+id/current_location_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/get_locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_location_func"
            android:text="GET Location" />

        <TextView
            android:id="@+id/travel_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="travel_mode" />

        <EditText
            android:id="@+id/travel_mode_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="driving" />

        <TextView
            android:id="@+id/webhook_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="webhook_url" />

        <EditText
            android:id="@+id/webhook_url_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/endpoint_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="endpoint_url" />

        <EditText
            android:id="@+id/endpoint_url_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="send_button_func"
            android:text="SEND" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>